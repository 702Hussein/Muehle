<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LoginID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".MainActivity">


    <!-- repository github:  AS https://www.youtube.com/watch?v=_d4fFFAJKVA
         gitHub Tut:    https://www.youtube.com/watch?v=SWYqp7iY_Tc
    -->

    <EditText
        android:id="@+id/btnPasswordID"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/btnNameID"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@android:color/white"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLoginID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPasswordID"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="149dp"
        android:background="@android:color/transparent"
        android:text="Login"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/btnNameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="47dp"
        android:backgroundTint="@android:color/white"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRegisterID"
        android:layout_width="123dp"
        android:layout_height="41dp"
        android:layout_below="@+id/btnLoginID"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="128dp"
        android:background="@android:color/transparent"
        android:text="Register"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>